{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"jsx-quotes": [
			"error",
			"prefer-double"
		],
		"no-unused-vars": [
			"error", {
				"vars": "all",
				"args": "after-used",
				"ignoreRestSiblings": true
			}
		],
		"react/prop-types": [
			2, {
				"skipUndeclared": true
			}
		],
		"jsx-a11y/anchor-has-content": 0,
	}
}
